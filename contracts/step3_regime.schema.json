{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/step3_regime.schema.json",
  "title": "Step3 Regime Output Schema (HTF-only)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_at_utc", "htf_timeframe", "theme", "rows"],
  "properties": {
    "schema_version": { "type": "string" },
    "generated_at_utc": { "type": "string", "format": "date-time" },
    "htf_timeframe": { "type": "string" },
    "theme": { "type": "string" },
    "source": { "type": "string" },
    "notes": { "type": "string" },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/RegimeRow" }
    }
  },
  "$defs": {
    "RegimeState": { "type": "string", "enum": ["risk_on_long", "risk_on_short", "no_trade"] },
    "AllowedDirection": { "type": "string", "enum": ["long", "short", "none"] },
    "RegimeRow": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "asof_utc",
        "symbol",
        "theme",
        "htf_timeframe",
        "regime_state",
        "regime_score",
        "allowed_direction",
        "position_multiplier",
        "regime_reason"
      ],
      "properties": {
        "asof_utc": { "type": "string", "format": "date-time" },
        "symbol": {
          "type": "string",
          "minLength": 1,
          "maxLength": 15,
          "pattern": "^[A-Z0-9][A-Z0-9.\\-]{0,14}$"
        },
        "theme": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10,
          "pattern": "^[A-Z0-9.\\-]{1,10}$"
        },
        "htf_timeframe": { "type": "string" },
        "regime_state": { "$ref": "#/$defs/RegimeState" },
        "regime_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "allowed_direction": { "$ref": "#/$defs/AllowedDirection" },
        "position_multiplier": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "regime_reason": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500
        },

        "links": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "env_row_id": { "type": "string" },
            "trend_row_id": { "type": "string" }
          }
        },

        "components": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "env_bias": { "type": "string", "enum": ["bull", "bear", "neutral"] },
            "env_score": { "type": "number", "minimum": -100, "maximum": 100 },
            "env_confidence": { "type": "number", "minimum": 0, "maximum": 1 },

            "trend_state": { "type": "string", "enum": ["up", "down", "range"] },
            "trend_strength": { "type": "number", "minimum": 0, "maximum": 1 },

            "vol_state": { "type": "string", "enum": ["calm", "normal", "hot", "unknown"] },
            "risk_flags": { "type": "array", "items": { "type": "string" }, "uniqueItems": true }
          }
        },

        "debug": {
          "type": "object",
          "additionalProperties": true
        },
        "debug_json": { "type": "string" }
      }
    }
  }
}
