{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Step3 ETF Env Output Schema (HTF daily)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "generated_at_utc", "rows"],
  "properties": {
    "schema_version": { "type": "string" },
    "generated_at_utc": { "type": "string", "format": "date-time" },
    "source": { "type": "string" },
    "notes": { "type": "string" },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/EtfEnvRow" }
    }
  },
  "$defs": {
    "EtfEnvRow": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "asof_date",
        "theme",
        "etf_symbol",
        "etf_env_bias",
        "etf_env_confidence",
        "etf_trend_state",
        "etf_env_method"
      ],
      "properties": {
        "asof_date": { "type": "string", "format": "date" },
        "theme": { "type": "string" },
        "etf_symbol": { "type": "string" },
        "etf_env_bias": { "type": "string", "enum": ["bull", "bear", "neutral"] },
        "etf_env_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "etf_env_method": { "type": "string" },
        "etf_trend_state": { "type": "string", "enum": ["up", "down", "flat"] },
        "debug": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
