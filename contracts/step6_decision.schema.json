{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Step6 Decision",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at_utc",
    "asof_date_utc",
    "asof_local",
    "themes",
    "risk_mode",
    "etf_daily_env",
    "tradable_themes",
    "picks",
    "warnings",
    "debug"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "generated_at_utc": { "type": "string" },
    "asof_date_utc": { "type": "string" },
    "asof_local": { "type": "string" },
    "themes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "risk_mode": {
      "type": "object",
      "required": ["mode", "strength"],
      "additionalProperties": true,
      "properties": {
        "mode": { "type": "string" },
        "strength": { "type": "number" }
      }
    },
    "etf_daily_env": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["theme", "env", "score", "flags"],
        "additionalProperties": true,
        "properties": {
          "theme": { "type": "string" },
          "env": { "type": "string" },
          "score": { "type": ["number", "null"] },
          "flags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "tradable_themes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "picks": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ENTER": {
          "type": "array",
          "items": { "$ref": "#/$defs/Pick" }
        },
        "WATCH": {
          "type": "array",
          "items": { "$ref": "#/$defs/Pick" }
        },
        "AVOID": {
          "type": "array",
          "items": { "$ref": "#/$defs/Pick" }
        }
      }
    },
    "warnings": {
      "type": "object",
      "additionalProperties": { "type": "integer" }
    },
    "debug": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "Pick": {
      "type": "object",
      "required": ["theme", "symbol", "score_total", "env", "trend", "action", "flags"],
      "additionalProperties": true,
      "properties": {
        "theme": { "type": "string" },
        "symbol": { "type": "string" },
        "score_total": { "type": "number" },
        "env": { "type": "string" },
        "trend": { "type": "string" },
        "action": { "type": "string" },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "flags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
